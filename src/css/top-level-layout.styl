#messagebar
	position fixed
	width 100%
	height 50px
	padding 0 4.5px
	z-index 9000
	transition opacity 1.325s ease
	// For Safari and Android.
	-webkit-transition opacity 1.325s ease

	&.mb-hide
		opacity 0

	p
		height @height - 9px //< 9px: margin-{top,bottom}
		margin 4.5px 0
		overflow auto

#map
	top 50px
